<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/black"
    android:layout_height="400dp"
    tools:context=".MainActivity">
    <ImageView
        android:id="@+id/close_btn"
        android:src="@drawable/ic_baseline_close_24"
        app:tint="@color/background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="20dp"
        android:layout_width="wrap_content"
        android:onClick="closeDrawer"
        android:layout_height="wrap_content"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:onClick="profile"
        app:layout_constraintTop_toBottomOf="@id/close_btn"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:id="@+id/profile_btn"
        >
        <TextView
            android:text="Profile"
            android:textColor="@color/background"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <View
            android:id="@+id/line1"
            android:background="@color/background"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:onClick="takeAtten"
        app:layout_constraintTop_toBottomOf="@id/profile_btn"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:id="@+id/take_atten_btn"
        >
        <TextView
            android:text="Take attendance"
            android:textColor="@color/background"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <View
            android:background="@color/background"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/take_atten_btn"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:onClick="viewAtten"
        android:layout_marginEnd="20dp"
        android:id="@+id/view_atten_btn"
        >
        <TextView
            android:text="View attendance"
            android:textColor="@color/background"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <View
            android:background="@color/background"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            />
    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>